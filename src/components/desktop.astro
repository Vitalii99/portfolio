---
import { Image } from "astro:assets";
import screenOneDesktop from "../assets/page-home/screen-one-desktop.png";
import screenTwoDesktop from "../assets/page-home/screen-two-desktop.png";

const screenDesktopAlt = "Screen";
---

<div class="w-full flex flex-col items-center">
    <figure
      class="w-full max-h-[497px] flex flex-col overflow-hidden scrollbar overflow-y-scroll overscroll-auto hover:overscroll-y-contain scroll-smooth shadow-md"
    >
      <Image
      src={screenOneDesktop}
      width={screenOneDesktop.width}
      height={screenOneDesktop.height}
      alt={screenDesktopAlt}
      class="object-contain"
    />
      <Image
      src={screenTwoDesktop}
      width={screenTwoDesktop.width}
      height={screenTwoDesktop.height}
      alt={screenDesktopAlt}
      class="object-contain"
    />
    </figure>
  </div>