import reactJs from "../assets/page-home/react-js.svg";
import nextJs from "../assets/page-home/next-js.svg";
import astro from "../assets/page-home/astro.svg";
import visualStudioCode from "../assets/page-home/visual-studio-code.svg";
import gitHub from "../assets/page-home/git-hub.svg";
