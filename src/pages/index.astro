---
import Layout from "../layouts/Layout.astro";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import ResumeButton from "../components/resume-button.astro";
import ResumeLoading from "../components/resume-loading.astro";
import ContactUs from "../components/contact-us.astro";
import { Image } from "astro:assets";
import transparentLayout from "../assets/page-404/transparent-layout.png";
import mySelfTransparent from "../assets/page-home/my-self-transparent.png";
import Experience from "../components/experience.astro";

const transparentLayoutAlt = "";
const mySelfTransparentAlt = "My Photo";
---

<Layout title="Vitalii Pavlivskyi Portfolio">
  <Header />
  <main class="w-full xl:w-container mx-auto mt-14 px-4 xl:px-0">
    <section id="hero" class="w-full mb-24 flex flex-col items-center scroll-mt-24">
      <h2 class="mt-14 mb-6 text-5xl font-medium text-pantone text-center">
        Vitalii Pavlivskyi
      </h2>
      <h3 class="mb-8 text-2xl text-center">Front End Developer</h3>
      <div class="w-full mb-8 sm:mb-0 flex justify-center">
        <ResumeButton />
        <ResumeLoading />
      </div>
      <p class="mb-8 text-lg text-center">
        Freelancer providing services for programming.<br />
        Contact me down below and let's get started.
      </p>
      <div class="mb-16 w-full flex flex-col items-center">
        <ContactUs />
      </div>
      <div class="w-full flex justify-center">
        <figure
          class="relative flex justify-center items-center bg-gradient-to-b from-pantone from-20% to-black-dark to-90% rounded-full shadow-md overflow-hidden"
        >
          <Image
            src={transparentLayout}
            width={transparentLayout.width}
            height={transparentLayout.height}
            alt={transparentLayoutAlt}
            class="object-contain"
          />
          <Image
            src={mySelfTransparent}
            width={mySelfTransparent.width}
            alt={mySelfTransparentAlt}
            quality="max"
            class="absolute"
          />
        </figure>
      </div>
    </section>
    <hr class="w-1/2 mb-24 mx-auto" />
    <section id="experience" class="w-full mb-24 flex flex-col scroll-mt-16">
      <h3 class="mb-16 text-2xl text-start">Experience</h3>
      <div class="w-full grid grid-cols-2 sm:grid-cols-5 gap-8">
        <Experience />
      </div>
    </section>
    <hr class="w-1/2 mb-24 mx-auto" />
    <section id="projects" class="w-full mb-24 flex flex-col">
      <h3 class="mb-8 text-2xl text-start">Projects</h3>
      <p class="mb-8 text-lg text-start">
        Check out some of my recent work.
      </p>
      <div class="w-full grid grid-cols-2 sm:grid-cols-5 gap-8">
      </div>
    </section>
    <hr class="w-1/2 mb-24 mx-auto" />
    <section id="contact" class="w-full mb-24 flex flex-col">
      <h3 class="mb-16 text-2xl text-start">Contact</h3>
      <div class="w-full grid grid-cols-2 sm:grid-cols-5 gap-8">
      </div>
    </section>
    <Footer />
  </main>
</Layout>
